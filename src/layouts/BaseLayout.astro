---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "a collection of carefully curated mixtapes" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <link rel="icon" type="image/jpeg" href="/favicon.jpg">
  <title>{title} | make me a mixtape</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body>
  <header>
    <a href="/mixes" class="logo">
      <h1>make me a mixtape</h1>
    </a>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>made with love and good music</p>
  </footer>
</body>
</html>

<style is:global>
  :root {
    --green: #74c476;
    --green-dark: #41Ab5D;
    --green-light: #9DD89F;
    --mint: #B8E6BA;
    --cream: #FFF5E1;
    --charcoal: #2B2B2B;
    --warm-gray: #5A5A5A;
    --soft-beige: #F9F6F0;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--green);
    color: var(--charcoal);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    background-color: transparent;
    padding: 2.5rem 5%;
    border-bottom: none;
  }

  .logo {
    text-decoration: none;
  }

  .logo h1 {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--charcoal);
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  main {
    flex: 1;
    padding: 4rem 5%;
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
  }

  footer {
    text-align: center;
    padding: 2rem 5%;
    background-color: transparent;
    color: var(--charcoal);
    font-size: 0.9rem;
    font-weight: 300;
    border-top: none;
  }

  @media (max-width: 768px) {
    header {
      padding: 2rem 5%;
    }

    main {
      padding: 2.5rem 5%;
    }
  }
</style>