---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="home">
  <div class="landing">
    <a href="/mixes" class="cassette-link">
      <img src="/banner.jpg" alt="" />
      <div class="overlay">
        <p>click to explore</p>
      </div>
    </a>
  </div>
</BaseLayout>

<style>
  .landing {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
  }

  .cassette-link {
    position: relative;
    display: block;
    max-width: 900px;
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 12px 40px rgba(0,0,0,0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .cassette-link:hover {
    transform: scale(1.02);
    box-shadow: 0 16px 50px rgba(116, 196, 118, 0.3);
  }

  .cassette-link img {
    width: 100%;
    height: auto;
    display: block;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(43, 43, 43, 0.9), transparent);
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cassette-link:hover .overlay {
    opacity: 1;
  }

  .overlay p {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    color: var(--green);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
  }

  @media (max-width: 768px) {
    .landing {
      min-height: 40vh;
    }

    .overlay {
      opacity: 1;
      background: linear-gradient(to top, rgba(43, 43, 43, 0.8), transparent);
    }

    .overlay p {
      font-size: 1.5rem;
    }
  }
</style>